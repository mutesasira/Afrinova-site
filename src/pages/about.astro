<BaseLayout>
  <!-- Page Header Start -->
  <div
    class="container-fluid page-header py-5 mb-5 wow fadeIn"
    data-wow-delay="0.1s"
    style="background-color: #F6F7FC; background-image: url('/img/mining4.png'); background-size: cover; background-position: center;"
  >
    <div class="container py-5">
      <h1 class="display-4 animated slideInDown mb-4" style="color: #F6F7FC;">
        About Us
      </h1>
